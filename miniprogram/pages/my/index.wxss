/* pages/post/post.wxss */
@import '/lib/iconfont/iconfont.wxss';
@import '/style/icon.wxss';
@import '/style/main.wxss';
.my-info {
    display: flex;
    flex-direction: row;
    padding: 20px;
    align-items: center;
}
.avatar-wrapper {
    border: none;
    padding: 0;
    margin: 0;
    background: none;
    line-height: 1;
    outline: none;
}
.avatar-wrapper::after {
    border: none;
}
.nick {
    line-height: 1;
}
.user-img {
    margin-right: 20rpx;
    width: 150rpx;
    height: 150rpx;
    margin-right: 30rpx;
    background-color: #ccc;
    border-radius: 50%;
}
.followfans {
    display: flex;
    flex-direction: row;
}
.follows {
    margin-right: 20rpx;
}
.nickname {
    line-height: 42rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: large;
}
.entry {
    text-align: center;
    padding: 100rpx 80rpx;
    color: #999;
    width: 100%;
}
.imgArea {
    display: flex;
    flex-wrap: wrap;
    /* padding-right: 30rpx; */
    width: 100%;
}
.imgArea  image {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;

    /* margin: 0 10rpx 10rpx 0; */
}
.imgArea  .imgwrap {
    width: 25%;
    height: 0;
    padding-top: 25%;
    position: relative;
    border: 1rpx solid #000;
    /* margin: 0 10rpx 10rpx 0; */
}
.likenum {
    position: absolute;
    bottom: 10rpx;
    right: 10rpx;
    color: #fff;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.mark {
    position: absolute;
    bottom: 0rpx;
    width: 100%;
    height: 100%;
    right: 0rpx;
    background-color: #000;
    opacity: 0.5;
    z-index: 0;
}